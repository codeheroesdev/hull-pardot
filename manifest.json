{
  "name": "Hull-Pardot",
  "tags": [
    "outgoing",
    "incoming",
    "oneColumn",
    "batch"
  ],
  "description": "Synchronize Hull users and Pardot Prospects",
  "readme": "readme.md",
  "admin": "/auth",
  "version": "0.2.8",
  "picture": "picture.png",
  "ui": false,
  "settings": [],
  "private_settings": [
    {
      "name": "api_key",
      "type": "string",
      "format": "hidden"
    },
    {
      "name": "connector_configuration",
      "title": "Authentication",
      "format": "title",
      "type": "string"
    },
    {
      "name": "email",
      "title": "User's Pardot email",
      "type": "string"
    },
    {
      "name": "password",
      "title": "Pardot Password",
      "type": "string"
    },
    {
      "name": "user_key",
      "title": "Pardot API User Key",
      "type": "string"
    },
    {
      "name": "outbound_configuration",
      "title": "Outbound Configuration",
      "format": "title",
      "type": "string"
    },
    {
      "name": "synchronized_segments",
      "title": "Send users belonging to one of these segments to Pardotp",
      "description": "Only users in the specified segments are sent, if not set - no users will be sent.",
      "type": "array",
      "format": "segment",
      "items": {
        "type": "string"
      },
      "default": []
    },
    {
      "name": "sync_fields_to_pardot_desc",
      "title": "Sync fields (from Hull to Pardot)",
      "format": "title",
      "type": "string"
    },
    {
      "name": "sync_fields_to_pardot",
      "title": "Custom Fields Sync (Hull to Pardot)",
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "hull": {
            "title": "Hull Field ID",
            "type": "string",
            "format": "trait",
            "options": {
              "placeholder": "Enter a Hull field id"
            }
          },
          "name": {
            "title": "Pardot Field ID",
            "type": "string",
            "format": "select",
            "options": {
              "allowCreate": false,
              "loadOptions": "/schema/custom_fields"
            }
          },
          "overwrite": {
            "type": "boolean",
            "title": "Hull overwrites Hubspot",
            "default": false
          }
        }
      }
    },
    {
      "name": "sync_fields_to_hull_desc",
      "title": "Sync fields (From Pardot to Hull)",
      "format": "title",
      "type": "string"
    },
    {
      "name": "inbound_configuration",
      "title": "Inbound Configuration",
      "format": "title",
      "type": "string"
    },
    {
      "name": "sync_fields_to_hull",
      "title": "Custom Fields Sync (Pardot to Hull)",
      "type": "array",
      "format": "table",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "title": "Pardot Field ID",
            "type": "string",
            "format": "select",
            "options": {
              "allowCreate": false,
              "loadOptions": "/schema/custom_fields"
            }
          },
          "hull": {
            "title": "Hull Field ID",
            "type": "string",
            "format": "trait",
            "options": {
              "placeholder": "Enter a Hull field id",
              "allowCreate": true,
              "source": "pardot"
            }
          }
        }
      }
    }
  ],
  "schedules": [],
  "subscriptions": [
    {
      "url": "/notify"
    }
  ]
}
